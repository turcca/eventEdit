<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div>
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<table>
		<tr>
			<td>
				Email:
			</td>
			<td>
				<%= @user.email %>
			</td>
		</tr>
		<tr>
			<td>
				Approved:
			</td>
			<td>
				<% if @user.approved %>
					<%= image_tag "checked.svg", :class => 'check' %>
				<% else %>
					<%= f.check_box :approved %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td>
				Admin:
			</td>
			<td>
				<%= f.check_box :admin %>
			</td>
		</tr>
  	</table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>